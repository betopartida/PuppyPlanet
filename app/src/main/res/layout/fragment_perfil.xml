<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.betopartida.puppyplanet.PerfilFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/perfil"
        android:orientation="vertical">

        <!--
         Favor de cambiar "mx.betopartida" por su ruta
        -->

        <mx.betopartida.puppyplanet.CircularImageView
            android:id="@+id/circularImageView"
            android:layout_width="@dimen/diametro"
            android:layout_height="@dimen/diametro"
            android:layout_gravity="center"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNombre"
            style="@style/nombre_mascota"
            android:layout_gravity="center"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rvFotos"
            >
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</FrameLayout>
