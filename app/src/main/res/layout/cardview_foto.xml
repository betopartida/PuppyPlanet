<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imgFoto"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/pet1"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgHuesoAm"
                android:src="@drawable/hueso_amarillo"
                android:layout_centerInParent="true"
                android:scaleX="@dimen/escala_min"
                android:scaleY="@dimen/escala_min"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvLikes"
                android:layout_toStartOf="@id/imgHuesoAm"
                android:layout_toLeftOf="@id/imgHuesoAm"
            />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>